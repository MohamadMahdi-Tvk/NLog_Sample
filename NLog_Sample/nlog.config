				-->
		<!--<target name="logconsole" xsi:type="coloredconsole"></target>-->

		<!--<target xsi:type="File" name="jsonFile" fileName="jsonlog.log">
			<layout type="JsonLayout">
				<attribute  name="time" layout="${longdate}"/>
				<attribute  name="level" layout="${level}"/>
